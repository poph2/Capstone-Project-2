<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/fragment_home_list_item_imageview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/notification_template_icon_bg"
        android:layout_margin="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/fragment_home_list_item_textview2"
        android:layout_alignBottom="@+id/fragment_home_list_item_imageview"
        android:layout_toRightOf="@+id/fragment_home_list_item_imageview"
        android:layout_toEndOf="@+id/fragment_home_list_item_imageview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/fragment_home_list_item_textview"
        android:layout_alignTop="@+id/fragment_home_list_item_imageview"
        android:layout_toRightOf="@+id/fragment_home_list_item_imageview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/fragment_home_list_item_textview2"
        android:maxLines="2" />
</RelativeLayout>