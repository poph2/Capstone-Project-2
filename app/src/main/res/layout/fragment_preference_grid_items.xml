<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.pop.pricecutz.utils.SquareImageView
        android:id="@+id/fragment_preference_grid_item_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Large Text"
        android:id="@+id/fragment_preference_grid_item_textview"
        android:maxLines="2"
        android:elevation="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/fragment_home_list_item_imageview"
        android:layout_alignStart="@+id/fragment_home_list_item_imageview"
        android:textAlignment="center"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_gravity="bottom"
        android:textColor="@android:color/white"
        android:background="#55000000"/>


    <!--ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view2"
        android:layout_alignTop="@+id/fragment_home_list_item_imageview"
        android:layout_alignRight="@+id/fragment_home_list_item_imageview"
        android:layout_alignEnd="@+id/fragment_home_list_item_imageview" /-->

    <com.pop.pricecutz.utils.SquareImageView
        android:id="@+id/fragment_preference_grid_item_imageview2"
        android:layout_margin="2dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />


</RelativeLayout>